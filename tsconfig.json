{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,                // Enables default imports for CommonJS modules
    "allowSyntheticDefaultImports": true    // Allows default imports for modules without a default export
  },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
